#!/usr/bin/env ruby
# encoding: UTF-8

require "#{File.dirname(__FILE__)}/../lib/seaweed/runner.rb"
require 'optparse'

options = {}
parser = OptionParser.new do |o|
  o.banner = "Usage: #{$0} [options] mode\nPossible modes: server, ci, auto"
  
  options[:port] = nil
  o.on '-p', '--port PORT', 'Override server port' do |port|
    options[:port] = port
  end  
  
  options[:version] = false
  o.on '-v', '--version', 'Show version' do
    options[:version] = true
  end
  
  o.on_tail '-h', '--help', 'Display this screen' do
    puts o
    exit
  end
end
parser.parse!

Seaweed::Runner.new ARGV.first, options, parser